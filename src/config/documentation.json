{
  "openapi": "3.0.0",
  "info": {
    "title": "Gestão Estoque Farmácia",
    "description": "Essa simples API e destinada a realizar Gestão de estoque de uma Farmácia, onde será possível realizar o cadastro, busca, edição e exclusão de medicamentos, e também de usuários autorizados que poderão fazer as mesmas operações",
    "version": "1.0.0",
    "contact": {
      "email": "mateus.carvalho@sounidesc.com.br"
    }
  },
  "paths": {
    "/users/authenticate": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Autenticar um usuário",
        "description": "Realiza a autenticação de um usuário ja existente na aplicação",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "login": "admin@gadmin.com",
                  "password": "123456789"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário autenticado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário não existente"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Criar um usuário",
        "description": "Realiza o cadastro de um novo usuário na aplicação",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "nome": "Testador de Almeida Aragão!",
                  "email": "testador2000@test.com",
                  "password": "123456789"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso!"
          },
          "400": {
            "description": "Usuário ja existente"
          },
          "401": {
            "description": "Token não invalido"
          }
        }
      }
    },
    "/users/{access_code}": {
      "get": {
        "tags": ["Usuário"],
        "summary": "Buscar por um usuário pelo Access_code",
        "description": "Realiza uma busca por um usuário específico",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "access_code",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "isAdmin": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário não existente"
          }
        }
      }
    },
    "/users/{id}": {
      "put": {
        "tags": ["Usuário"],
        "summary": "Atualiza um usuário",
        "description": "Realiza a atualização de um usuário ja existente na aplicação",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "nome": "Testador de Almeida Aragão Segundo!",
                  "email": "testador2001@test.com"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário não existente"
          }
        }
      },
      "delete": {
        "tags": ["Usuário"],
        "summary": "Excluir um usuário",
        "description": "Realiza a exclusão de um usuário ja existente na aplicação",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário excluído com sucesso!"
          },
          "400": {
            "description": "Usuário não existente"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
